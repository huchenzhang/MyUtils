<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lay_SwipeRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.huchenzhang.myutils.swiperefresh.SwipeRefreshActivity">

    <com.aspsine.swipetoloadlayout.SwipeToLoadLayout
        android:id="@+id/swipeToLoad"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.huchenzhang.myutils.swiperefresh.SwipeRefreshHeaderView
            android:id="@+id/swipe_refresh_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"  />

        <com.example.huchenzhang.myutils.swiperefresh.SwipeRefreshFooterView
            android:id="@+id/swipe_load_more_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"  />

        <TextView
            android:id="@+id/swipe_target"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="Hello World!" />

    </com.aspsine.swipetoloadlayout.SwipeToLoadLayout>

</RelativeLayout>
